<%= turbo_frame_tag(dom_id(rent_payment)) do %>
  <%= form_for @rent_payment, html: { class: "space-y-8 divide-gray-200" } do |f| %>
    <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
      <div class="space-y-6 divide-y divide-gray-200 pt-8 sm:space-y-5 sm:pt-10">
        <div class="space-y-6 divide-y divide-gray-200 sm:space-y-5">
          <div class="pt-6 sm:pt-5">
            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
              <label for="first-name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                <%= f.label :date_paid, 'Date rent paid' %>
              </label>
              <div class="mt-1 sm:col-span-2 sm:mt-0">
                <%= f.date_field :date_paid, value: Date.today, class: "block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm" %>
              </div>
            </div>
          </div>
          <div class="pt-6 sm:pt-5">
            <div role="group" aria-labelledby="label-notifications">
              <div class="sm:grid sm:grid-cols-3 sm:items-baseline sm:gap-4">
                <div>
                  <div class="text-base font-medium text-gray-900 sm:text-sm sm:text-gray-700" id="label-notifications">Payment Formats</div>
                </div>
                <div class="sm:col-span-2">
                  <div class="max-w-lg">
                    <p class="text-sm text-gray-500">Rent payment made via</p>
                    <div class="mt-4 space-y-4">
                      <div class="flex items-center">
                        <%= f.radio_button :format, "Cash", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                        <%= f.label :format, "Cash", class: "ml-3 block text-sm font-medium text-gray-700"%>
                      </div>
                      <div class="flex items-center">
                        <%= f.radio_button :format, "Check", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                        <%= f.label :format, "Check", class: "ml-3 block text-sm font-medium text-gray-700"%>
                      </div>
                      <div class="flex items-center">
                        <%= f.radio_button :format, "Bank Transfer", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                        <%= f.label :format, "Bank Transfer", class: "ml-3 block text-sm font-medium text-gray-700"%>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="pt-5">
      <div class="flex justify-end">
        <%= link_to 'Cancel', unit_path(@rent_payment.unit), class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"%>
        <%= f.submit "Save", class:"ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    </div>
  <% end %>
<% end %>
